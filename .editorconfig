root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.java]
indent_size = 4
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.md]
max_line_length = off

[*.xml]
indent_size = 4
indent_style = space
